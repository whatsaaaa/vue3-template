{
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": [      
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/prettier"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2]
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2019
  }
}
